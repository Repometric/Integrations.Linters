{
    "version": "0.1.0",
    "isShellCommand": true,
    "command": "sh",
    "args": ["-c"],
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "build-engine",
            "args": [
                "dotnet build ${workspaceRoot}/src/cli/project.json"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile",
            "suppressTaskName": true,
            "showOutput": "always"
        },
        {
            "taskName": "publish-cli",
            "args": [
                "dotnet publish ${workspaceRoot}/src/cli/project.json --output bin/"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile",
            "suppressTaskName": true,
            "showOutput": "always"
        }
    ]
}